<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dip"
    android:layout_height="240dip"
    android:orientation="vertical"
    android:background="@color/white">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 标题<游戏结束> -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center">
			<ImageView
			    android:layout_width="180dip"
			    android:layout_height="50dip"
			    android:src="@drawable/game_over"
			    />
        </LinearLayout>
        <!-- 共多少局 -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/end_count"
			    />
	        <TextView 
	            android:id="@+id/game_end_result_count_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dip"
	            android:gravity="center"
	            android:textSize="20dp"
	            />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
	            android:layout_marginLeft="15dip"
                android:src="@drawable/count_2"/>
        </LinearLayout>
        <!-- 用户赢多少局 -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/user_win_text"
			    />
	        <TextView 
	            android:id="@+id/game_end_result_user_grade_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dip"
	            android:gravity="center"
	            android:textSize="20dp"
	            />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
	            android:layout_marginLeft="15dip"
                android:src="@drawable/count_2"/>
        </LinearLayout>
        <!-- 标题<游戏结束> -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center">
			<ImageView
			    android:layout_width="250dip"
			    android:layout_height="50dip"
			    android:src="@drawable/game_over_title"
			    />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
