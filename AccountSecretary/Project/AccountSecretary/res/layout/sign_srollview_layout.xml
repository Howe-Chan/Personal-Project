<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <!-- 第一排 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView 
            android:id="@+id/srollview_icon_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_icon_1"/>
        <ImageView 
            android:id="@+id/srollview_icon_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_icon_2"/>
    </LinearLayout>
    <!-- 第二排 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView 
            android:id="@+id/srollview_icon_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_icon_3"/>
        <ImageView 
            android:id="@+id/srollview_icon_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_icon_4"/>
    </LinearLayout>
    <!-- 第三排 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView 
            android:id="@+id/srollview_icon_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_icon_5"/>
        <ImageView 
            android:id="@+id/srollview_icon_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_icon_6"/>
    </LinearLayout>
    <!-- 第四排 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView 
            android:id="@+id/srollview_icon_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_icon_7"/>
        <ImageView 
            android:id="@+id/srollview_icon_8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_icon_8"/>
    </LinearLayout>
    <!-- 第五排 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView 
            android:id="@+id/srollview_icon_9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_icon_9"/>
        <ImageView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/default_user_icon"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>
