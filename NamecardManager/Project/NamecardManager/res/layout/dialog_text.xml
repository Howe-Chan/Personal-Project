<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <!-- 标题 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_grey"
        android:gravity="center">
        <TextView 
            android:id="@+id/dialog_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/logo_blue"/>
    </LinearLayout>

    <!-- 内容 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="@color/white">
	    <TextView 
        	android:id="@+id/dialog_text_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/margin_left_and_right"
	        android:layout_marginRight="@dimen/margin_left_and_right"
	        android:text="测试内容"
	        android:textSize="@dimen/text_size_16"
	        android:textColor="@color/light_grey_cc"/>
    </LinearLayout>
    
    <!-- 按钮 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:padding="5dp">
        <Button 
            android:id="@+id/dialog_text_okbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="按 钮"
            android:textSize="@dimen/text_size_20"
            android:textColor="@drawable/button_text_color"/>
    </LinearLayout>
</LinearLayout>
