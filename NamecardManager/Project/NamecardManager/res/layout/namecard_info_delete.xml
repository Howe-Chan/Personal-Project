<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:orientation="horizontal"
        android:gravity="center_vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="确认删除名为【"
	        android:textSize="@dimen/text_size_16"
	        android:textColor="@color/light_grey_cc"/>
	    <TextView 
	        android:id="@+id/namecard_info_delete"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:text="测试名片"
	        android:textSize="@dimen/text_size_16"
	        android:textColor="@color/logo_blue"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:text="】的名片"
	        android:textSize="@dimen/text_size_16"
	        android:textColor="@color/light_grey_cc"/>
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:text="删除后，该名片无法恢复，请确认是否删除"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/light_grey_cc"/>

</LinearLayout>
