<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <SurfaceView 
            android:id="@+id/camera_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
        
        <com.lee.namecardocr.view.PreviewBorderView 
    		xmlns:chan="http://schemas.android.com/apk/res/com.lee.namecardmanager"
            android:id="@+id/camera_previewborderview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            chan:tipTextSize="16dp"
            chan:tipText="请将方框对准名片拍摄"
            chan:tipTextColor="#00BB00"/>
    </RelativeLayout>

    <!-- 按钮 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageButton
            android:id="@+id/camera_flash"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@drawable/camera_flash_close"
            android:background="@drawable/camera_button_bg" />
        
        <ImageButton 
            android:id="@+id/camera_capture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:src="@drawable/camera_capture"
            android:background="@drawable/camera_button_bg" />
        
    </RelativeLayout>
    
</FrameLayout>
